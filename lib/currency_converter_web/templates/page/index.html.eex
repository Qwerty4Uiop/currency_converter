<%= form_tag("/convert", method: "get") do %>
  <input type="text" name="currency" required placeholder="Currency">
  <input type="number" name="amount" step=0.01 required placeholder="Amount">
  <input type="date" name="date" value="<%= Timex.format!(Timex.now(), "{YYYY}-{0M}-{D}") %>">
  <input type="submit" value="Convert">
<% end %>